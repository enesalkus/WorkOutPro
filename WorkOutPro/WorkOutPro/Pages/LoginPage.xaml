<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkOutPro.Pages.LoginPage"
             Title="Login"
             BackgroundColor="{StaticResource BeFitBackground}">

    <ScrollView>
        <Grid RowDefinitions="Auto,*" Padding="20">
            
            <!-- Header -->
            <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,40,0,30">
                <Frame BackgroundColor="{StaticResource BeFitPrimary}" 
                       CornerRadius="50" 
                       WidthRequest="100" 
                       HeightRequest="100"
                       HorizontalOptions="Center"
                       Padding="0"
                       HasShadow="True">
                    <Label Text="ðŸ‹ï¸" FontSize="45" HorizontalOptions="Center" VerticalOptions="Center"/>
                </Frame>
                <Label Text="WorkOutPro" FontSize="36" FontAttributes="Bold" HorizontalOptions="Center" TextColor="{StaticResource BeFitPrimary}"/>
                <Label Text="Sign in to your account" FontSize="16" HorizontalOptions="Center" TextColor="{StaticResource BeFitTextLight}"/>
            </VerticalStackLayout>
            
            <!-- Login Form -->
            <Frame Grid.Row="1" BackgroundColor="{StaticResource BeFitCard}" CornerRadius="20" Padding="25" HasShadow="True" VerticalOptions="Start">
                <VerticalStackLayout Spacing="15">
                    
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Email" FontSize="14" TextColor="{StaticResource BeFitText}"/>
                        <Entry x:Name="EmailEntry" 
                               Placeholder="email@example.com"
                               PlaceholderColor="{StaticResource BeFitTextLight}"
                               TextColor="{StaticResource BeFitText}"
                               Keyboard="Email"/>
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Password" FontSize="14" TextColor="{StaticResource BeFitText}"/>
                        <Entry x:Name="PasswordEntry" 
                               Placeholder="â€¢â€¢â€¢â€¢â€¢â€¢"
                               PlaceholderColor="{StaticResource BeFitTextLight}"
                               TextColor="{StaticResource BeFitText}"
                               IsPassword="True"/>
                    </VerticalStackLayout>
                    
                    <Button Text="Login" 
                            BackgroundColor="{StaticResource BeFitPrimary}"
                            TextColor="White"
                            CornerRadius="10"
                            FontSize="18"
                            HeightRequest="50"
                            Margin="0,10,0,0"
                            Clicked="OnLoginClicked"/>
                    
                    <BoxView HeightRequest="1" Color="{StaticResource BeFitTextLight}" Opacity="0.3" Margin="0,15"/>
                    
                    <Label Text="Don't have an account?" HorizontalOptions="Center" TextColor="{StaticResource BeFitTextLight}"/>
                    
                    <Button Text="Register" 
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource BeFitPrimary}"
                            BorderColor="{StaticResource BeFitPrimary}"
                            BorderWidth="2"
                            CornerRadius="10"
                            FontSize="16"
                            HeightRequest="45"
                            Clicked="OnRegisterClicked"/>
                    
                    <!-- Test Credentials -->
                    <Frame BackgroundColor="{StaticResource BeFitBackground}" CornerRadius="10" Padding="15" Margin="0,20,0,0">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Test Users" FontSize="14" FontAttributes="Bold" TextColor="{StaticResource BeFitPrimary}"/>
                            
                            <VerticalStackLayout Spacing="3">
                                <Label Text="Admin:" FontSize="12" FontAttributes="Bold" TextColor="{StaticResource BeFitText}"/>
                                <Label Text="admin@workoutpro.local / Admin123!" FontSize="11" TextColor="{StaticResource BeFitTextLight}"/>
                            </VerticalStackLayout>
                            
                            <VerticalStackLayout Spacing="3">
                                <Label Text="User:" FontSize="12" FontAttributes="Bold" TextColor="{StaticResource BeFitText}"/>
                                <Label Text="user1@workoutpro.local / User123!" FontSize="11" TextColor="{StaticResource BeFitTextLight}"/>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                    
                </VerticalStackLayout>
            </Frame>
            
        </Grid>
    </ScrollView>

</ContentPage>
