<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkOutPro.Pages.AccountPage"
             Title="My Account"
             BackgroundColor="White">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Close" Clicked="OnCloseClicked"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">
            <Label Text="Account Settings" 
                   FontSize="28" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" 
                   TextColor="#6C5CE7"/>

            <!-- Personal Info Section -->
            <Label Text="Personal Info" FontSize="18" TextColor="#333" FontAttributes="Bold"/>
            
            <Border Stroke="#6C5CE7" StrokeThickness="1" StrokeShape="RoundRectangle 10" Padding="5">
                <Entry x:Name="FirstNameEntry" Placeholder="First Name" TextColor="#333"/>
            </Border>
            
            <Border Stroke="#6C5CE7" StrokeThickness="1" StrokeShape="RoundRectangle 10" Padding="5">
                <Entry x:Name="LastNameEntry" Placeholder="Last Name" TextColor="#333"/>
            </Border>
            
            <Border Stroke="#6C5CE7" StrokeThickness="1" StrokeShape="RoundRectangle 10" Padding="5">
                <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" TextColor="#333"/>
            </Border>

            <Button Text="Update Info" 
                    Clicked="OnUpdateInfoClicked" 
                    BackgroundColor="#00B894" 
                    TextColor="White" 
                    CornerRadius="10"
                    HeightRequest="50"/>

            <!-- Password Section -->
            <BoxView HeightRequest="1" Color="Gray" Margin="0, 10"/>
            <Label Text="Change Password" FontSize="18" TextColor="#333" FontAttributes="Bold"/>

            <Border Stroke="#6C5CE7" StrokeThickness="1" StrokeShape="RoundRectangle 10" Padding="5">
                <Entry x:Name="NewPasswordEntry" Placeholder="New Password" IsPassword="True" TextColor="#333"/>
            </Border>

            <Button Text="Change Password" 
                    Clicked="OnChangePasswordClicked" 
                    BackgroundColor="#0984E3" 
                    TextColor="White" 
                    CornerRadius="10"
                    HeightRequest="50"/>

            <!-- Delete Account Section -->
            <BoxView HeightRequest="1" Color="Gray" Margin="0, 10"/>
            <Label Text="Danger Zone" FontSize="18" TextColor="#D63031" FontAttributes="Bold"/>
            <Label Text="Deleting your account will remove all your data (exercises, sessions)." 
                   TextColor="Gray" FontSize="12"/>

            <Button Text="Delete My Account" 
                    Clicked="OnDeleteAccountClicked" 
                    BackgroundColor="#D63031" 
                    TextColor="White" 
                    CornerRadius="10"
                    HeightRequest="50"
                    Margin="0,0,0,20"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
