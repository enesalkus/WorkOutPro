<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkOutPro.Pages.RegisterPage"
             Title="Register"
             BackgroundColor="{StaticResource BeFitBackground}">

    <ScrollView>
        <Grid RowDefinitions="Auto,*" Padding="20">
            
            <!-- Header -->
            <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,30,0,20">
                <Label Text="Create Account" FontSize="32" FontAttributes="Bold" HorizontalOptions="Center" TextColor="{StaticResource BeFitPrimary}"/>
                <Label Text="Create a new account" FontSize="16" HorizontalOptions="Center" TextColor="{StaticResource BeFitTextLight}"/>
            </VerticalStackLayout>
            
            <!-- Register Form -->
            <Frame Grid.Row="1" BackgroundColor="{StaticResource BeFitCard}" CornerRadius="20" Padding="25" HasShadow="True" VerticalOptions="Start">
                <VerticalStackLayout Spacing="15">
                    
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <VerticalStackLayout Grid.Column="0" Spacing="5">
                            <Label Text="First Name" FontSize="14" TextColor="{StaticResource BeFitText}"/>
                            <Frame BackgroundColor="White" BorderColor="{StaticResource BeFitSecondary}" CornerRadius="8" Padding="8,5" HasShadow="False">
                                <Entry x:Name="FirstNameEntry" 
                                       Placeholder="Your first name"
                                       PlaceholderColor="{StaticResource BeFitTextLight}"
                                       TextColor="{StaticResource BeFitText}"/>
                            </Frame>
                        </VerticalStackLayout>
                        
                        <VerticalStackLayout Grid.Column="1" Spacing="5">
                            <Label Text="Last Name" FontSize="14" TextColor="{StaticResource BeFitText}"/>
                            <Frame BackgroundColor="White" BorderColor="{StaticResource BeFitSecondary}" CornerRadius="8" Padding="8,5" HasShadow="False">
                                <Entry x:Name="LastNameEntry" 
                                       Placeholder="Your last name"
                                       PlaceholderColor="{StaticResource BeFitTextLight}"
                                       TextColor="{StaticResource BeFitText}"/>
                            </Frame>
                        </VerticalStackLayout>
                    </Grid>
                    
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Email" FontSize="14" TextColor="{StaticResource BeFitText}"/>
                        <Frame BackgroundColor="White" BorderColor="{StaticResource BeFitSecondary}" CornerRadius="8" Padding="8,5" HasShadow="False">
                            <Entry x:Name="EmailEntry" 
                                   Placeholder="email@example.com"
                                   PlaceholderColor="{StaticResource BeFitTextLight}"
                                   TextColor="{StaticResource BeFitText}"
                                   Keyboard="Email"/>
                        </Frame>
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Password" FontSize="14" TextColor="{StaticResource BeFitText}"/>
                        <Frame BackgroundColor="White" BorderColor="{StaticResource BeFitSecondary}" CornerRadius="8" Padding="8,5" HasShadow="False">
                            <Entry x:Name="PasswordEntry" 
                                   Placeholder="At least 6 characters"
                                   PlaceholderColor="{StaticResource BeFitTextLight}"
                                   TextColor="{StaticResource BeFitText}"
                                   IsPassword="True"/>
                        </Frame>
                    </VerticalStackLayout>
                    
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Confirm Password" FontSize="14" TextColor="{StaticResource BeFitText}"/>
                        <Frame BackgroundColor="White" BorderColor="{StaticResource BeFitSecondary}" CornerRadius="8" Padding="8,5" HasShadow="False">
                            <Entry x:Name="ConfirmPasswordEntry" 
                                   Placeholder="Re-enter password"
                                   PlaceholderColor="{StaticResource BeFitTextLight}"
                                   TextColor="{StaticResource BeFitText}"
                                   IsPassword="True"/>
                        </Frame>
                    </VerticalStackLayout>
                    
                    <Button Text="Register" 
                            BackgroundColor="{StaticResource BeFitPrimary}"
                            TextColor="White"
                            CornerRadius="10"
                            FontSize="18"
                            HeightRequest="50"
                            Margin="0,10,0,0"
                            Clicked="OnRegisterClicked"/>
                    
                    <Button Text="â† Back to Login" 
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource BeFitPrimary}"
                            FontSize="14"
                            Clicked="OnBackClicked"/>
                    
                </VerticalStackLayout>
            </Frame>
            
        </Grid>
    </ScrollView>

</ContentPage>
