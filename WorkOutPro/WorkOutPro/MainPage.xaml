<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkOutPro.MainPage"
             Title="Home"
             BackgroundColor="{StaticResource BeFitBackground}">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        
        <!-- User Info Bar -->
        <Frame Grid.Row="0" BackgroundColor="{StaticResource BeFitPrimary}" CornerRadius="12" Padding="15" HasShadow="True">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <Label x:Name="UserRoleLabel" 
                       Text="👤 User" 
                       FontSize="14" 
                       TextColor="White" 
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                <Label x:Name="UserEmailLabel" 
                       Grid.Column="1"
                       Text="" 
                       FontSize="12" 
                       TextColor="White" 
                       Opacity="0.8"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
                <Button Grid.Column="2"
                        Text="Logout" 
                        BackgroundColor="White"
                        TextColor="{StaticResource BeFitPrimary}"
                        CornerRadius="8"
                        FontSize="12"
                        Padding="15,5"
                        Clicked="OnLogoutClicked"/>
            </Grid>
        </Frame>
        
        <!-- Main Content -->
        <VerticalStackLayout Grid.Row="1" VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
            
            <!-- Logo/Icon -->
            <Frame BackgroundColor="{StaticResource BeFitSecondary}" 
                   CornerRadius="60" 
                   WidthRequest="120" 
                   HeightRequest="120"
                   HorizontalOptions="Center"
                   Padding="0"
                   HasShadow="True">
                <Label Text="🏋️" 
                       FontSize="50" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center"/>
            </Frame>
            
            <!-- Welcome Text -->
            <Label Text="Welcome!" 
                   FontSize="36" 
                   FontAttributes="Bold"
                   TextColor="{StaticResource BeFitText}"
                   HorizontalOptions="Center"/>
            
            <Label Text="Track your workouts with WorkOutPro" 
                   FontSize="18"
                   TextColor="{StaticResource BeFitTextLight}"
                   HorizontalOptions="Center"/>
            
            <!-- Quick Stats Cards -->
            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center" Margin="0,30,0,0">
                
                <Frame BackgroundColor="{StaticResource BeFitCard}" 
                       CornerRadius="15" 
                       Padding="20"
                       HasShadow="True"
                       WidthRequest="140">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="📅" FontSize="30" HorizontalOptions="Center"/>
                        <Label Text="Sessions" 
                               FontSize="14" 
                               TextColor="{StaticResource BeFitTextLight}"
                               HorizontalOptions="Center"/>
                        <Label x:Name="SessionCountLabel"
                               Text="0" 
                               FontSize="28" 
                               FontAttributes="Bold"
                               TextColor="{StaticResource BeFitPrimary}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>
                
                <Frame BackgroundColor="{StaticResource BeFitCard}" 
                       CornerRadius="15" 
                       Padding="20"
                       HasShadow="True"
                       WidthRequest="140">
                    <VerticalStackLayout Spacing="5">
                        <Label Text="💪" FontSize="30" HorizontalOptions="Center"/>
                        <Label Text="Exercises" 
                               FontSize="14" 
                               TextColor="{StaticResource BeFitTextLight}"
                               HorizontalOptions="Center"/>
                        <Label x:Name="ExerciseCountLabel"
                               Text="0" 
                               FontSize="28" 
                               FontAttributes="Bold"
                               TextColor="{StaticResource BeFitSuccess}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>
                
            </HorizontalStackLayout>
            
        </VerticalStackLayout>
        
        <!-- Footer -->
        <Label Grid.Row="2" 
               Text="© 2026 WorkOutPro - Workout Tracker" 
               FontSize="12" 
               TextColor="{StaticResource BeFitTextLight}"
               HorizontalOptions="Center"
               Margin="0,20"/>
    </Grid>

</ContentPage>