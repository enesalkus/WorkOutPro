<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WorkOutPro"
             x:Class="WorkOutPro.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- BeFit Custom Colors -->
            <Color x:Key="BeFitPrimary">#6C5CE7</Color>
            <Color x:Key="BeFitSecondary">#A29BFE</Color>
            <Color x:Key="BeFitBackground">#F8F9FA</Color>
            <Color x:Key="BeFitCard">#FFFFFF</Color>
            <Color x:Key="BeFitText">#2D3436</Color>
            <Color x:Key="BeFitTextLight">#636E72</Color>
            <Color x:Key="BeFitSuccess">#00B894</Color>
            <Color x:Key="BeFitWarning">#FDCB6E</Color>
            <Color x:Key="BeFitDanger">#E17055</Color>
            <Color x:Key="BeFitInfo">#0984E3</Color>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>